<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <package name="user" extends="default" namespace="/">
        <!-- *****************************user********************************* -->
        <action name="prepareLogin" class="action.UserAction" method="prepareLogin">
            <result>/login.jsp</result>
        </action>
        <action name="userLogin" class="action.UserAction" method="userLogin">
            <result name="success">/main.jsp</result>
            <result name="failed">/login.jsp</result>
        </action>
        <action name="userLogOut" class="action.UserAction" method="userLogOut">
            <result type="redirectAction">
                <param name="actionName">prepareLogin</param>
            </result>
        </action>
        <action name="getUserList" class="action.UserAction" method="getUserList">
        </action>
        <action name="addUser" class="action.UserAction" method="addUser">
        </action>
        <action name="updateUser" class="action.UserAction" method="updateUser">
        </action>
        <action name="deleteUser" class="action.UserAction" method="deleteUser">
        </action>
    </package>
</struts>