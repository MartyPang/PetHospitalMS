<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <package name="user" namespace="/user" extends="default" >
        <default-interceptor-ref name="mydefault"></default-interceptor-ref>
        <action name="prepareLogin" class="action.UserAction" method="prepareLogin">
            <result>/login.jsp</result>
        </action>
        <action name="userLogin" class="action.UserAction" method="userLogin">
            <result type="redirectAction">
                <param name="namespace">/article</param>
                <param name="actionName">preArticleList</param>
            </result>
            <result name="failed">/login.jsp</result>
        </action>
        <action name="userLogOut" class="action.UserAction" method="userLogOut">
            <result type="redirectAction">
                <param name="actionName">prepareLogin</param>
            </result>
        </action>
    </package>
</struts>